    shape: image
    icon: ./diagrams/arista-switch.png
  }

  s2-leaf2: {
    shape: image
    icon: ./diagrams/arista-switch.png
  }

  s2-spine1 -- s2-leaf1

  s2-spine1 -- s2-leaf2
}

s2-host1: {
  VRF-BLUE: {
    style.fill: blue
  }
  VRF-RED: {
    style.fill: red
  }
}

prod.s2-leaf1 -- s2-host1.VRF-RED: 10.10.10.2/24 {
